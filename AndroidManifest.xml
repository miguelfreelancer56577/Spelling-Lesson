    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        android:name="com.activeandroid.app.Application" >
        
        <meta-data android:name="AA_DB_NAME" android:value="Pickrand" />
		<meta-data android:name="AA_DB_VERSION" android:value="5" />
		<meta-data android:name="AA_MODELS"
    		android:value="org.mangelt.spellinglesson.domain.Item, org.mangelt.spellinglesson.domain.Category" />
        
        <activity
            android:name="org.mangelt.spellinglesson.activities.BeginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.mangelt.spellinglesson.activities.MenuActivity"
            android:label="@string/menu_activity" >
        </activity>
        <activity
            android:name="org.mangelt.spellinglesson.activities.AskActivity"
            android:label="@string/app_name" >
        </activity>
    </application>

</manifest>
